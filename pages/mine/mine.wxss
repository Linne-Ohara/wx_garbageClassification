/* pages/index/mine.wxss */

.head-height {
  height: 240rpx;
}

.head {
  display:flex;
  width: 100%;
  background-color: #449f45;
  align-items: center;
}



.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 240rpx;
  position: absolute;
}

.userinfo-avatar {
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.userHeaderPic {
  /* background-color: grey; */
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  border: honeydew 1rpx solid;
  background-color: #39b83c;
}

.userinfo-nickname {
  color: #ffffff;
  font-size: 42rpx;
}

.userinfo-score{
  color: #ffffff;
  font-size: 28rpx;
}

.list-wrapper {
  width: 100%;
}

/* 横着的分割View样式 */
/*分割线样式*/
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.list-item {
  width: 100%;
  background-color: #ffffff;
}

.list-item_active {
  background-color: #fbf9fe;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
.item-text {
  color: #333333;
  margin-left: 20rpx;
  font-size: 38rpx;
  flex-grow: 1;
}
.item-array {
  color: #333333;
  margin-right: 50rpx;
  font-size: 38rpx;
  width: 32rpx;
}

.item-image {
  margin-left: 50rpx;
  width: 40rpx;
  height: 40rpx;
}

.marginTop {
  margin-top: 30rpx;
}


.listContainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: auto;
  margin-top: 50rpx;
  width: 95vw;
  background-color: rgb(198, 238, 186);
  border-radius: 20rpx;
}

.listBox {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.3%;
  /* background-color: #fff; */
  height: 250rpx;
  /* border: 3rpx gray solid;
  box-sizing: border-box;
  margin:0rpx -3rpx -3rpx 0rpx ; 去除重叠的边框 */
}

.listBoxImg {
  display: block;
  height: 70rpx;
  margin-bottom: 20rpx;
}

.listText {
  font-size: smaller;
}