/* pages/lutan_main/luntan_main.wxss */
.userContainerMain {
  position: relative;
  height: 300rpx;
  background-color: rgb(35, 136, 77);
  width: auto;
}

.userName {
  position: absolute;
  display: inline-block;
  width: auto;
  height: auto;
  right: 200rpx;
  bottom: 50rpx;
  text-align: center;
  font-size: large;  
}

.userImg {
  position: absolute;
  display: block;
  width: 140rpx;
  height: 140rpx;
  right: 50rpx;
  bottom: 0rpx;
  border-radius: 70rpx;
  z-index: 2;
}

.userImgThroughLine {
  position: absolute;
  width: 100%;
  height: 40rpx;
  border-top: 5rpx solid gray;
  bottom: 0rpx;
  z-index: 1;
  background-color: #fff;
}

.shareToOthers {
  position: absolute;
  display: inline-block;
  right: 20rpx;
  top:20rpx;
  width: auto;
  height: 50rpx;
  background-color: rgba(97, 110, 84, 0.712);
  border: 4rpx solid black;
  border-radius: 15rpx;
  text-align: center;
  line-height: 50rpx;
}

.commentsArea {
  width: 97%;
  margin: auto;
  margin-top: 10rpx;
  background-color: rgb(228, 227, 227);
}

.thisComment {
  width: auto;
  margin-bottom: 50rpx;
  background-color: #fff;
  overflow: hidden;
}

.thisCommentUserPic {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 60rpx;
}

.thisCommentText {
  width: 95%;
  height: auto;
  margin: auto;
  margin-top: 20rpx;
  letter-spacing: 2rpx;
}

.thisCommentDetails {
  position: relative;
  margin-top: 10rpx;
  font-size: small;
}

.sendTime {
  position: absolute;
  display: inline-block;
  width: auto;
}

.commentNum {
  position: absolute;
  display: inline-block;
  width: auto;
  margin-right: 0;
  right: 10rpx;
}

.checkToCommentPage{
  width: 120rpx;
  height: 50rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  text-align: center;
  background-color: rgb(228, 227, 227);
  border-radius: 10rpx;
}

.thisCommentImgContainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.onePicImg {
  display: block;
  width: 400rpx;
  margin: auto;
  border: 2rpx solid rgb(218, 209, 209);
}


.morePicImg {
  display: block;
  width: 200rpx;
}

